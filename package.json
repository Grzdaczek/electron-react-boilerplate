{
	"name": "electron-react-boilerplate",
	"version": "0.7.2",
	"private": true,
	"description": "electron boilerplate using ts, react, redux... and electron-builder",
	"author": {
		"name": "Grzdaczek"
	},
	"main": "build/main.js",
	"scripts": {
		"prestart": "rimraf build/",
		"prebuild": "rimraf build/",
		"prepackage": "rimraf dist/",
		"start": "webpack --config config/webpack.main.js --env.NODE_ENV=development && webpack-dev-server --config config/webpack.dev.js",
		"build": "webpack --config config/webpack.main.js --env.NODE_ENV=production && webpack --config config/webpack.renderer.js",
		"package": "npm run build && electron-builder"
	},
	"build": {
		"productName": "electron",
		"appId": "com.electron.boilerplate",
		"files": [
			"./build/**/*"
		]
	},
	"dependencies": {
		"electron-devtools-installer": "3.0.0",
		"react": "16.13.1",
		"react-dom": "16.13.1",
		"react-redux": "7.2.0",
		"redux": "4.0.5"
	},
	"devDependencies": {
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/react": "16.9.34",
		"@types/react-dom": "16.9.6",
		"@types/react-redux": "7.1.7",
		"css-loader": "3.5.2",
		"electron": "8.2.2",
		"electron-builder": "^22.4.1",
		"file-loader": "6.0.0",
		"html-webpack-plugin": "4.2.0",
		"node-sass": "4.13.1",
		"rimraf": "^3.0.2",
		"sass-loader": "8.0.2",
		"style-loader": "1.1.3",
		"ts-loader": "6.2.2",
		"typescript": "3.8.3",
		"webpack": "^4.42.1",
		"webpack-cli": "3.3.11",
		"webpack-dev-server": "3.10.3",
		"webpack-merge": "^4.2.2"
	}
}
