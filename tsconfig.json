{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"target": "es6",
		"jsx": "react",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts"],
	"exclude": ["dist", "build", "node_modules"]
}
